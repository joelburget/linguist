= language match =

PFPL 1st ed, section 13.1 -- A Pattern Language

== syntax ==

exp :=
  | match(exp; rules) // case analysis

rules :=
  | rules[n](rule[n])

rule :=
  | rule[k](pat; exp[k]. exp)

pat :=
  | wild()
  | var(var)
  | triv()
  | pair(pat; pat)
  | inl(pat)
  | inr(pat)

var := var(STRING)
